<Window x:Class="LoginWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginWPF"
        mc:Ignorable="d"
        Title="Login" Height="202.131" Width="546.422" ResizeMode="NoResize">
    
    <StackPanel Margin="0,12,-3,-25" Height="161" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal">
            <Label Content="Username" Height="39" Width="76" FontFamily="Verdana" />
            <TextBox x:Name="usuari" Width="127" Height="21"/>

        </StackPanel >
        <StackPanel Orientation="Horizontal" Height="29" Margin="0,0,54,0">
            <Label Content="Password" Width="76" Margin="0,6,0,-14" FontFamily="Verdana" />
            <PasswordBox x:Name="contrasenya" Width="127" Height="21" VerticalAlignment="Top" Margin="0,8,0,-3" />
        </StackPanel >
        <Button Content="Validate" Click="validate" Height="40" Margin="393,0,35,0" FontFamily="Verdana" IsDefault="True"/>
        <Label x:Name="lb3" FontFamily="Verdana" Background="#00000000" FontWeight="Bold" />
    </StackPanel>
</Window>
